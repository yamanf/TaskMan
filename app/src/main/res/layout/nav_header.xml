<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="32dp">

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat"
        android:text="Username"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/montserrat"
        android:text="example@example.com"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvUsername" />

    <View
        android:id="@+id/doneDivider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="16dp"
        android:background="@color/md_grey_400"
        app:layout_constraintTop_toBottomOf="@+id/tvEmail" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnChangeUsername"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Change username"
        android:textSize="12sp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconSize="20dp"
        app:iconPadding="10dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/doneDivider" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateWorkspace"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create new workspace"
        android:textSize="12sp"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:icon="@drawable/ic_baseline_edit_24"
        app:iconSize="20dp"
        app:iconPadding="10dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/btnChangeUsername" />

    <View
        android:id="@+id/dividerLast"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="2dp"
        android:layout_marginVertical="16dp"
        app:layout_constraintTop_toBottomOf="@+id/btnCreateWorkspace"
        app:layout_constraintBottom_toTopOf="@id/btnLogOut"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnLogOut"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/log_out"
        android:textAlignment="textStart"
        android:textColor="@color/black"
        app:icon="@drawable/ic_baseline_logout_24"
        app:iconPadding="16dp"
        app:iconTint="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/dividerLast"
        app:layout_constraintBottom_toTopOf="@id/tvDeleteAccount"/>



    <TextView
        android:id="@+id/tvDeleteAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:text="@string/delete_account"
        android:layout_marginTop="12dp"
        android:textColor="@color/red"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLogOut" />

</androidx.constraintlayout.widget.ConstraintLayout>